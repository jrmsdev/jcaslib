#!/usr/bin/env bash

set -e

addline() {
    local OPTNAME="$1"
    shift
    local OPTVAL="$@"
    echo "#define ${OPTNAME} \"${OPTVAL}\"" >>.build_info.h
}

rm -f .build_info.h
addline JCL_BUILD_TIME `date -R`
addline JCL_BUILD_BY `id -un`@`uname -n`
addline JCL_BUILD_EPOCH `date '+%s'`
addline JCL_BUILD_OS `uname -snrm`
addline JCL_CC_VERSION `${CC} --version | head -n 1`
addline JCL_MODULES \
        `ls ${INCD}/*.h | sort | sed "s#${INCD}/##" | sed 's/\.h//'`

exit 0
